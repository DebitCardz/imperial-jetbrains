<idea-plugin>
    <id>in.imperialb.imperialjetbrains</id>
    <name>IMPERIAL</name>
    <vendor email="noreply@imperialb.in" url="https://imperialb.in">IMPERIAL</vendor>

    <description>JetBrains extension to easily upload documents to IMPERIAL</description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="imperial.notifications" displayType="BALLOON"  />
    </extensions>

    <actions>
        <group id="IMPERIAL.CreateDocument" text="Create Document" description="Create the document" >
            <add-to-group group-id="CutCopyPasteGroup" anchor="first" />
            <action class="in.imperialb.imperialjetbrains.CreateDocument" id="IMPERIAL.Actions.CreateDocument" text="Create Document From Selection" />
            <action class="in.imperialb.imperialjetbrains.CreateEntireDocument" id="IMPERIAL.Actions.CreateEntireDocument" text="Create Document From File" />
        </group>
    </actions>
</idea-plugin>